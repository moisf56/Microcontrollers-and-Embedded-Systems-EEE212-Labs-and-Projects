ORG 0
	MOV P2, #0FFH
	JB P2.4, HERE
	JB P2.5 ,SECOND
AGAIN:	SETB P3.0
	ACALL DELAY1
	ACALL DELAY1
	CLR P3.0
	ACALL DELAY1
	ACALL DELAY1
	CLR P3.0
	SJMP AGAIN
SECOND: SETB P3.0
	ACALL DELAY1
	CLR P3.0
	ACALL DELAY1
	CLR P3.0
	SJMP SECOND
HERE:	JB P2.5, FOURTH
	SETB P3.0
	ACALL DELAY2
	ACALL DELAY2
	CLR P3.0
	ACALL DELAY2
	ACALL DELAY2
	CLR P2.6
	SJMP HERE
FOURTH:	SETB P2.6
	ACALL DELAY2
	CLR P2.6
	ACALL DELAY2
	CLR P2.6
 	SJMP FOURTH


DELAY1:	MOV TMOD, #00000001B
	MOV TH0, #0EDH
	MOV TL0, #0EFH
	SETB TR0
HERE1:	JNB TF0, HERE1
	CLR TF0
	CLR TR0
	RET
				;FOR 5 MS
DELAY2:	MOV TMOD, #00000001B
	MOV TH0, #0FCH
	MOV TL0, #50H
	SETB TR0
HERE2:	JNB TF0, HERE2
	CLR TF0
	CLR TR0
	RET
END